<div class="form-auth">
  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin"}) do |f| %>

    <br/>
    <div>
      <%= f.email_field :email, :class => "form-control", :value => "Email", :autofocus => true %>
    </div>

    <div>  
      <%= f.password_field :password, :class => "form-control", :value => "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div>
        <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "small" %>
      </div>
    <% end -%>

    <br/>
    <div>
      <%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
    </div>
    <br/>
  <% end %>

  <%= render "devise/shared/links" %>
</div>