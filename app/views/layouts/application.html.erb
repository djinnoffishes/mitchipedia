<!DOCTYPE html>
<html>
  <head>
    <title>Wix</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      
      <div class="header">
        <ul class="nav nav-pills pull-right">
          <% if current_user %>
            <li><%= link_to current_user.name, edit_user_registration_path, class: "header-greeting" %></li>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "My wix", wikis_path %></li>
            <li><%= link_to destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-share-alt' do %> 
            <% end %></li>
          <% else %>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Sign in", new_user_session_path %></li>
            <li><%= link_to "Sign up", new_user_registration_path %></li>
          <% end %>
        </ul>
      <h3><%= link_to "Wix", root_path, class: "text-muted" %></h3>
      </div>

      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:error] %>
        <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= flash[:error] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-info">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
      <div class="content">
      <%= yield %>
      </div>
    </div>
  </body>
</html>
