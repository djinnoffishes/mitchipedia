<br />
<%= form_for [wiki, page], html: { class: "form-horizontal" } do |f| %>
  
  <div class="form-group">
    <% if page.title %>
      <%= f.text_field :title, class: "form-control", value: page.title %>
    <% else %>
      <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
    <% end %>
  </div>

  <div class="form-group">
    <% if page.body %>
      <%= f.text_area :body, class: "form-control", value: page.body, data: {provide: "markdown"}, rows: 20 %>
    <% else %>
      <%= f.text_area :body, class: "form-control", placeholder: "Page content", data: {provide: "markdown"}, rows: "20" %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-primary btn-lg' %>
    <%= link_to "Cancel", :back %>
  </div>
<% end %>