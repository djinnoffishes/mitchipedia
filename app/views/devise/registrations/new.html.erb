<div class="form-auth">
  <h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <br /><div>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" , :autofocus => true %></div>

    <br /><div>
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %></div>

    <br /><div>
    <%= f.password_field :password, class: "form-control", placeholder: "Password"  %></div>

    <br /><div>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation"  %></div>

    <br /><div><%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"  %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>